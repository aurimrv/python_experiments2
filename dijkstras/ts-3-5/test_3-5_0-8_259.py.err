import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

class TestDijkstras:
    def test_dijkstras_basic_case(self):
        weighted_graph = {
            'A': {'B': 5, 'C': 3},
            'B': {'A': 5, 'C': 1, 'D': 4},
            'C': {'A': 3, 'B': 1, 'D': 2},
            'D': {'B': 4, 'C': 2}
        }
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'C', 'D']

    def test_dijkstras_unreachable_destination(self):
        weighted_graph = {
            'A': {'B': 5, 'C': 3},
            'B': {'A': 5, 'C': 1, 'D': 4},
            'C': {'A': 3, 'B': 1, 'D': 2},
            'D': {'B': 4, 'C': 2}
        }
        src = 'B'
        dst = 'A'
        assert dijkstras(weighted_graph, src, dst) == []

    def test_dijkstras_identical_source_and_destination(self):
        weighted_graph = {
            'A': {'B': 5, 'C': 3},
            'B': {'A': 5, 'C': 1, 'D': 4},
            'C': {'A': 3, 'B': 1, 'D': 2},
            'D': {'B': 4, 'C': 2}
        }
        src = 'C'
        dst = 'C'
        assert dijkstras(weighted_graph, src, dst) == ['C']

    def test_dijkstras_no_edges(self):
        weighted_graph = {
            'A': {},
            'B': {},
            'C': {},
            'D': {}
        }
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == []

    def test_dijkstras_negative_weights(self):
        weighted_graph = {
            'A': {'B': -5, 'C': 3},
            'B': {'A': 1, 'C': 1, 'D': 4},
            'C': {'A': 3, 'B': 1, 'D': 2},
            'D': {'B': 4, 'C': 2}
        }
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C', 'D']