import os
import sys

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

class TestDijkstras:
    
    def test_dijkstras_basic(self):
        weighted_graph = {
            'A': {'B': 2, 'C': 4},
            'B': {'A': 2, 'C': 1},
            'C': {'A': 4, 'B': 1}
        }
        src = 'A'
        dst = 'C'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C']

    def test_dijkstras_single_node(self):
        weighted_graph = {
            'A': {}
        }
        src = 'A'
        dst = 'A'
        assert dijkstras(weighted_graph, src, dst) == ['A']

    def test_dijkstras_unreachable_node(self):
        weighted_graph = {
            'A': {'B': 2},
            'B': {'A': 2}
        }
        src = 'A'
        dst = 'C'
        assert dijkstras(weighted_graph, src, dst) == []

    def test_dijkstras_same_node(self):
        weighted_graph = {
            'A': {'B': 2, 'C': 4},
            'B': {'A': 2, 'C': 1},
            'C': {'A': 4, 'B': 1}
        }
        src = 'A'
        dst = 'A'
        assert dijkstras(weighted_graph, src, dst) == ['A']

    def test_dijkstras_large_graph(self):
        weighted_graph = {
            'A': {'B': 5, 'C': 2},
            'B': {'A': 3, 'C': 1, 'D': 6},
            'C': {'A': 1, 'B': 2, 'D': 4},
            'D': {'B': 1, 'C': 4}
        }
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'C', 'D']