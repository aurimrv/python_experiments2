import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

class TestDijkstras:
    def test_dijkstras_basic_case(self):
        weighted_graph = {
            0: {1: 2, 2: 4},
            1: {2: 1, 3: 7},
            2: {3: 3},
            3: {}
        }
        src = 0
        dst = 3
        assert dijkstras(weighted_graph, src, dst) == [0, 2, 3]

    def test_dijkstras_unreachable_destination(self):
        weighted_graph = {
            0: {1: 2, 2: 4},
            1: {2: 1, 3: 7},
            2: {3: 3},
            3: {}
        }
        src = 2
        dst = 0
        assert dijkstras(weighted_graph, src, dst) == []

    def test_dijkstras_same_source_and_destination(self):
        weighted_graph = {
            0: {1: 2, 2: 4},
            1: {2: 1, 3: 7},
            2: {3: 3},
            3: {}
        }
        src = 1
        dst = 1
        assert dijkstras(weighted_graph, src, dst) == [1]

    def test_dijkstras_large_graph(self):
        weighted_graph = {
            0: {1: 2, 2: 4, 3: 3},
            1: {4: 1},
            2: {3: 2, 4: 5},
            3: {4: 4},
            4: {}
        }
        src = 0
        dst = 4
        assert dijkstras(weighted_graph, src, dst) == [0, 1, 4]