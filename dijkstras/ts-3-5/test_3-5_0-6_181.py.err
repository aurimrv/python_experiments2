import os
import sys

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

class TestDijkstras:

    def test_shortest_path_simple(self):
        weighted_graph = {
            'A': {'B': 1, 'C': 4},
            'B': {'A': 1, 'C': 2, 'D': 5},
            'C': {'A': 4, 'B': 2, 'D': 1},
            'D': {'B': 5, 'C': 1}
        }
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C', 'D']

    def test_shortest_path_no_path(self):
        weighted_graph = {
            'A': {'B': 1},
            'B': {'A': 1},
            'C': {}
        }
        src = 'A'
        dst = 'C'
        assert dijkstras(weighted_graph, src, dst) == []

    def test_shortest_path_same_src_dst(self):
        weighted_graph = {
            'A': {'B': 1},
            'B': {'A': 1}
        }
        src = 'A'
        dst = 'A'
        assert dijkstras(weighted_graph, src, dst) == ['A']

    def test_shortest_path_multiple_paths(self):
        weighted_graph = {
            'A': {'B': 1, 'C': 4},
            'B': {'A': 1, 'C': 2, 'D': 5},
            'C': {'A': 4, 'B': 2, 'D': 1},
            'D': {'B': 5, 'C': 1}
        }
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C', 'D']

    def test_shortest_path_large_graph(self):
        weighted_graph = {
            'A': {'B': 1, 'C': 4, 'D': 2},
            'B': {'A': 1, 'C': 2, 'D': 5, 'E': 3},
            'C': {'A': 4, 'B': 2, 'D': 1, 'E': 1},
            'D': {'B': 5, 'C': 1, 'E': 3},
            'E': {'B': 3, 'C': 1, 'D': 3}
        }
        src = 'A'
        dst = 'E'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C', 'E']
