import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

class TestDijkstras:
    def test_shortest_path_case1(self):
        graph = {
            'A': {'B': 1, 'C': 4},
            'B': {'A': 1, 'C': 2, 'D': 5},
            'C': {'A': 4, 'B': 2, 'D': 1},
            'D': {'B': 5, 'C': 1}
        }
        weighted_graph = WeightedGraph(graph)
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C', 'D']
    
    def test_shortest_path_case2(self):
        graph = {
            'A': {'B': 2, 'C': 3},
            'B': {'A': 2, 'C': 1, 'D': 4},
            'C': {'A': 3, 'B': 1, 'D': 2},
            'D': {'B': 4, 'C': 2}
        }
        weighted_graph = WeightedGraph(graph)
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C', 'D']
    
    def test_shortest_path_case3(self):
        graph = {
            'A': {'B': 3, 'C': 2},
            'B': {'A': 3, 'C': 1, 'D': 3},
            'C': {'A': 2, 'B': 1, 'D': 4},
            'D': {'B': 3, 'C': 4}
        }
        weighted_graph = WeightedGraph(graph)
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'C', 'D']

    def test_shortest_path_case4(self):
        graph = {
            'A': {'B': 1, 'C': 1},
            'B': {'A': 1, 'C': 1, 'D': 1},
            'C': {'A': 1, 'B': 1, 'D': 1},
            'D': {'B': 1, 'C': 1}
        }
        weighted_graph = WeightedGraph(graph)
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'D']

class WeightedGraph:
    def __init__(self, vertices):
        self.vertices = vertices