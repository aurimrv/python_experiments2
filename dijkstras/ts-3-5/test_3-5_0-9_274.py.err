def test_dijkstras_same_source_destination():
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_vertex('C')
    weighted_graph.add_edge('A', 'B', 1)
    weighted_graph.add_edge('B', 'C', 2)
    
    src = 'A'
    dst = 'A'
    
    assert dijkstras(weighted_graph, src, dst) == ['A']

def test_dijkstras_multiple_paths():
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_vertex('C')
    weighted_graph.add_vertex('D')
    weighted_graph.add_vertex('E')
    weighted_graph.add_edge('A', 'B', 1)
    weighted_graph.add_edge('A', 'C', 3)
    weighted_graph.add_edge('B', 'D', 2)
    weighted_graph.add_edge('C', 'D', 1)
    weighted_graph.add_edge('D', 'E', 2)
    
    src = 'A'
    dst = 'E'
    
    assert dijkstras(weighted_graph, src, dst) == ['A', 'C', 'D', 'E']