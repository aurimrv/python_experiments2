import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

class TestDijkstras:

    def test_shortest_path_basic(self):
        weighted_graph = {
            'A': {'B': 2, 'C': 5},
            'B': {'A': 2, 'C': 1},
            'C': {'A': 5, 'B': 1}
        }
        src = 'A'
        dst = 'C'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C']

    def test_shortest_path_no_path(self):
        weighted_graph = {
            'A': {'B': 2},
            'B': {'C': 3},
            'C': {'D': 4}
        }
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C', 'D']

    def test_shortest_path_same_src_dst(self):
        weighted_graph = {
            'A': {'B': 2},
            'B': {'C': 3},
            'C': {'D': 4}
        }
        src = 'A'
        dst = 'A'
        assert dijkstras(weighted_graph, src, dst) == ['A']

    def test_shortest_path_negative_weights(self):
        weighted_graph = {
            'A': {'B': -2, 'C': -5},
            'B': {'A': -2, 'C': -1},
            'C': {'A': -5, 'B': -1}
        }
        src = 'A'
        dst = 'C'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C']