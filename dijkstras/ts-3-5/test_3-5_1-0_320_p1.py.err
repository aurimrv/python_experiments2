import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

def test_dijkstras():
    class Vertex:
        def __init__(self, value):
            self.value = value
            self.adjacent = {}

    class WeightedGraph:
        def __init__(self):
            self.vertices = {}

    graph = WeightedGraph()
    v1 = Vertex('A')
    v2 = Vertex('B')
    v3 = Vertex('C')
    v1.adjacent = {'B': 1, 'C': 4}
    v2.adjacent = {'A': 1, 'C': 2}
    v3.adjacent = {'A': 4, 'B': 2}
    graph.vertices = {'A': v1, 'B': v2, 'C': v3}

    assert dijkstras(graph, 'A', 'C') == ['A', 'B', 'C']
    assert dijkstras(graph, 'A', 'B') == ['A', 'B']
    assert dijkstras(graph, 'B', 'A') == ['B', 'A']
    assert dijkstras(graph, 'B', 'C') == ['B', 'C']
    assert dijkstras(graph, 'C', 'A') == ['C', 'A']
    assert dijkstras(graph, 'C', 'B') == ['C', 'B']