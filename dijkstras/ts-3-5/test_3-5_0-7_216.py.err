import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

def test_dijkstras():
    # Test case 1: Shortest path between two adjacent nodes
    weighted_graph = {
        'A': {'B': 1},
        'B': {'A': 1}
    }
    src = 'A'
    dst = 'B'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'B']

    # Test case 2: Shortest path between nodes with multiple intermediate nodes
    weighted_graph = {
        'A': {'B': 3, 'C': 1},
        'B': {'A': 3, 'C': 1, 'D': 5},
        'C': {'A': 1, 'B': 1, 'D': 2},
        'D': {'B': 5, 'C': 2}
    }
    src = 'A'
    dst = 'D'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'C', 'D']

    # Test case 3: Shortest path between nodes with cycles
    weighted_graph = {
        'A': {'B': 2, 'C': 1},
        'B': {'A': 2, 'C': 3},
        'C': {'A': 1, 'B': 3}
    }
    src = 'A'
    dst = 'B'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'B']

    # Test case 4: Shortest path when all nodes are connected
    weighted_graph = {
        'A': {'B': 1, 'C': 2},
        'B': {'A': 1, 'C': 3},
        'C': {'A': 2, 'B': 3}
    }
    src = 'A'
    dst = 'C'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'C']

    # Test case 5: Shortest path between nodes with different edge weights
    weighted_graph = {
        'A': {'B': 4, 'C': 2},
        'B': {'A': 4, 'C': 1},
        'C': {'A': 2, 'B': 1}
    }
    src = 'A'
    dst = 'C'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'C']