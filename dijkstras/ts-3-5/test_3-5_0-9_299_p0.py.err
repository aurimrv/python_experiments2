import os
import sys

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

class TestDijkstras:

    def test_shortest_path_exists(self):
        weighted_graph = {
            'A': {'B': 5, 'C': 1},
            'B': {'A': 5, 'C': 2},
            'C': {'A': 1, 'B': 2}
        }
        src = 'A'
        dst = 'B'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B']

    def test_no_path_exists(self):
        weighted_graph = {
            'A': {'B': 5, 'C': 1},
            'B': {'A': 5, 'C': 2},
            'C': {'A': 1, 'B': 2}
        }
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == []

    def test_same_source_and_destination(self):
        weighted_graph = {
            'A': {'B': 5, 'C': 1},
            'B': {'A': 5, 'C': 2},
            'C': {'A': 1, 'B': 2}
        }
        src = 'A'
        dst = 'A'
        assert dijkstras(weighted_graph, src, dst) == ['A']

    def test_large_weighted_graph(self):
        weighted_graph = {
            'A': {'B': 2, 'C': 3},
            'B': {'C': 1, 'D': 5},
            'C': {'D': 1},
            'D': {'A': 3}
        }
        src = 'A'
        dst = 'D'
        assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C', 'D']

    def test_invalid_source_or_destination(self):
        weighted_graph = {
            'A': {'B': 5, 'C': 1},
            'B': {'A': 5, 'C': 2},
            'C': {'A': 1, 'B': 2}
        }
        src = 'A'
        dst = 'E'
        assert dijkstras(weighted_graph, src, dst) == []