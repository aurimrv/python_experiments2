import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

def test_dijkstras():
    # Test case 1: Shortest path between nodes in a simple graph
    weighted_graph = {
        'A': {'B': 1, 'C': 4},
        'B': {'A': 1, 'C': 2},
        'C': {'A': 4, 'B': 2}
    }
    src = 'A'
    dst = 'C'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C']

    # Test case 2: Shortest path between nodes in a graph with multiple paths
    weighted_graph = {
        'A': {'B': 2, 'C': 4},
        'B': {'A': 2, 'C': 1, 'D': 3},
        'C': {'A': 4, 'B': 1, 'D': 2},
        'D': {'B': 3, 'C': 2}
    }
    src = 'A'
    dst = 'D'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'D']

    # Test case 3: Shortest path between nodes where source and destination are the same
    weighted_graph = {
        'A': {'B': 2, 'C': 4},
        'B': {'A': 2, 'C': 1, 'D': 3},
        'C': {'A': 4, 'B': 1, 'D': 2},
        'D': {'B': 3, 'C': 2}
    }
    src = 'C'
    dst = 'C'
    assert dijkstras(weighted_graph, src, dst) == ['C']

    # Test case 4: Shortest path between nodes with negative weights
    weighted_graph = {
        'A': {'B': -2, 'C': 4},
        'B': {'A': -2, 'C': 1, 'D': 3},
        'C': {'A': 4, 'B': 1, 'D': 2},
        'D': {'B': 3, 'C': 2}
    }
    src = 'A'
    dst = 'D'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'D']