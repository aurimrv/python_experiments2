import os
import sys

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

def test_dijkstras_shortest_path():
    class Vertex:
        def __init__(self, label):
            self.label = label
            self.adjacent = {}

    class WeightedGraph:
        def __init__(self):
            self.vertices = {}

    # Create a simple test weighted graph
    graph = WeightedGraph()
    v1 = Vertex('A')
    v2 = Vertex('B')
    v3 = Vertex('C')
    v4 = Vertex('D')

    v1.adjacent[v2] = 1
    v1.adjacent[v3] = 4
    v2.adjacent[v3] = 2
    v2.adjacent[v4] = 5
    v3.adjacent[v4] = 1

    graph.vertices = {'A': v1, 'B': v2, 'C': v3, 'D': v4}

    assert dijkstras(graph, 'A', 'D') == ['A', 'C', 'D']
    assert dijkstras(graph, 'A', 'B') == ['A', 'B']
    assert dijkstras(graph, 'B', 'D') == ['B', 'C', 'D']
    assert dijkstras(graph, 'C', 'A') == ['C', 'A']