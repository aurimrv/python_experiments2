import os
import sys

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras, WeightedGraph, Vertex

import pytest

@pytest.fixture
def weighted_graph():
    graph = WeightedGraph()
    v1 = Vertex('A')
    v2 = Vertex('B')
    v3 = Vertex('C')
    
    graph.add_vertex(v1)
    graph.add_vertex(v2)
    graph.add_vertex(v3)
    
    graph.add_edge(v1, v2, 1)
    graph.add_edge(v2, v3, 2)
    
    return graph

def test_dijkstras_shortest_path(weighted_graph):
    shortest_path = dijkstras(weighted_graph, 'A', 'C')
    assert shortest_path == ['A', 'B', 'C']

def test_dijkstras_shortest_path_same_node(weighted_graph):
    shortest_path = dijkstras(weighted_graph, 'A', 'A')
    assert shortest_path == ['A']

def test_dijkstras_shortest_path_no_path(weighted_graph):
    shortest_path = dijkstras(weighted_graph, 'A', 'C')
    assert shortest_path == []