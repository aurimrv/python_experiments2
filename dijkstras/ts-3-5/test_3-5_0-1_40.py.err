import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

def test_dijkstras():
    # Test case 1: Shortest path between two directly connected nodes
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_edge('A', 'B', 5)
    assert dijkstras(weighted_graph, 'A', 'B') == ['A', 'B']

    # Test case 2: Shortest path between two nodes with multiple intermediate nodes
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_vertex('C')
    weighted_graph.add_vertex('D')
    weighted_graph.add_edge('A', 'B', 2)
    weighted_graph.add_edge('B', 'C', 3)
    weighted_graph.add_edge('C', 'D', 4)
    assert dijkstras(weighted_graph, 'A', 'D') == ['A', 'B', 'C', 'D']

    # Test case 3: Shortest path between two nodes with alternative paths
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_vertex('C')
    weighted_graph.add_vertex('D')
    weighted_graph.add_edge('A', 'B', 2)
    weighted_graph.add_edge('A', 'C', 5)
    weighted_graph.add_edge('B', 'D', 3)
    weighted_graph.add_edge('C', 'D', 4)
    assert dijkstras(weighted_graph, 'A', 'D') == ['A', 'B', 'D']

    # Test case 4: Shortest path between two nodes with no direct connection
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_vertex('C')
    weighted_graph.add_vertex('D')
    weighted_graph.add_edge('A', 'B', 2)
    weighted_graph.add_edge('B', 'C', 3)
    weighted_graph.add_edge('C', 'D', 4)
    assert dijkstras(weighted_graph, 'A', 'D') == ['A', 'B', 'C', 'D']

    # Test case 5: Shortest path between two nodes with negative edge weights
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_vertex('C')
    weighted_graph.add_vertex('D')
    weighted_graph.add_edge('A', 'B', -2)
    weighted_graph.add_edge('B', 'C', -3)
    weighted_graph.add_edge('C', 'D', -4)
    assert dijkstras(weighted_graph, 'A', 'D') == ['A', 'B', 'C', 'D']

    # Test case 6: Shortest path between two nodes with all equal edge weights
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_vertex('C')
    weighted_graph.add_vertex('D')
    weighted_graph.add_edge('A', 'B', 1)
    weighted_graph.add_edge('B', 'C', 1)
    weighted_graph.add_edge('C', 'D', 1)
    assert dijkstras(weighted_graph, 'A', 'D') == ['A', 'B', 'C', 'D']

    # Test case 7: Shortest path between two nodes with cyclic paths
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_vertex('C')
    weighted_graph.add_vertex('D')
    weighted_graph.add_edge('A', 'B', 2)
    weighted_graph.add_edge('B', 'C', 3)
    weighted_graph.add_edge('C', 'D', 4)
    weighted_graph.add_edge('D', 'A', 5)
    assert dijkstras(weighted_graph, 'A', 'D') == ['A', 'B', 'C', 'D']

    # Test case 8: Shortest path between two nodes with self-loop
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_edge('A', 'A', 2)
    assert dijkstras(weighted_graph, 'A', 'A') == ['A']

    # Test case 9: Shortest path between two disconnected nodes
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    assert dijkstras(weighted_graph, 'A', 'B') == []

    # Test case 10: Shortest path between two nodes with no path
    weighted_graph = WeightedGraph()
    weighted_graph.add_vertex('A')
    weighted_graph.add_vertex('B')
    weighted_graph.add_vertex('C')
    weighted_graph.add_vertex('D')
    weighted_graph.add_edge('A', 'B', 2)
    weighted_graph.add_edge('C', 'D', 4)
    assert dijkstras(weighted_graph, 'A', 'D') == []
