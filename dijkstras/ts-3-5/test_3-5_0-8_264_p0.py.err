import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

def test_dijkstras():
    class Vertex:
        def __init__(self, value):
            self.value = value
            self.adjacent = {}

    class WeightedGraph:
        def __init__(self):
            self.vertices = {}
    
    weighted_graph = WeightedGraph()
    vertex_a = Vertex('A')
    vertex_b = Vertex('B')
    vertex_c = Vertex('C')
    vertex_d = Vertex('D')
    
    vertex_a.adjacent = {'B': 2, 'C': 4}
    vertex_b.adjacent = {'D': 3}
    vertex_c.adjacent = {'D': 1}
    
    weighted_graph.vertices = {'A': vertex_a, 'B': vertex_b, 'C': vertex_c, 'D': vertex_d}
    
    assert dijkstras(weighted_graph, 'A', 'D') == ['A', 'B', 'D']
    
    assert dijkstras(weighted_graph, 'A', 'A') == ['A']
    
    vertex_e = Vertex('E')
    vertex_f = Vertex('F')
    
    vertex_d.adjacent = {'E': 2, 'F': 5}
    vertex_e.adjacent = {'C': 3}
    vertex_f.adjacent = {'A': 1}
    
    weighted_graph.vertices = {'A': vertex_a, 'B': vertex_b, 'C': vertex_c, 'D': vertex_d, 'E': vertex_e, 'F': vertex_f}
    
    assert dijkstras(weighted_graph, 'A', 'C') == ['A', 'D', 'E', 'C'] 