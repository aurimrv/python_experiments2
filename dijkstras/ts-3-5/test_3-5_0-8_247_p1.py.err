import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

def test_dijkstras():
    weighted_graph = {
        'a': {'b': 1, 'c': 4},
        'b': {'a': 1, 'c': 2, 'd': 5},
        'c': {'a': 4, 'b': 2, 'd': 1},
        'd': {'b': 5, 'c': 1}
    }
    src = 'a'
    dst = 'd'
    assert dijkstras(weighted_graph, src, dst) == ['a', 'b', 'c', 'd']

    weighted_graph = {
        'A': {'B': 1, 'C': 4},
        'B': {'A': 1, 'C': 2, 'D': 5},
        'C': {'A': 4, 'B': 2, 'D': 1},
        'D': {'B': 5, 'C': 1}
    }
    src = 'A'
    dst = 'D'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C', 'D']

    weighted_graph = {
        'x': {'y': 3, 'z': 1},
        'y': {'x': 3, 'z': 2, 'w': 4},
        'z': {'x': 1, 'y': 2, 'w': 1},
        'w': {'y': 4, 'z': 1}
    }
    src = 'x'
    dst = 'w'
    assert dijkstras(weighted_graph, src, dst) == ['x', 'z', 'w']

    weighted_graph = {
        '1': {'2': 2, '3': 1},
        '2': {'1': 2, '3': 3, '4': 4},
        '3': {'1': 1, '2': 3, '4': 2},
        '4': {'2': 4, '3': 2}
    }
    src = '1'
    dst = '4'
    assert dijkstras(weighted_graph, src, dst) == ['1', '3', '4']