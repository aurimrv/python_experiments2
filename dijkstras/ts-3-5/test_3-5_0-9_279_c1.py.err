import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras, WeightedGraph, Vertex

import pytest

@pytest.fixture
def sample_weighted_graph():
    graph = WeightedGraph()
    vertex1 = Vertex('A')
    vertex2 = Vertex('B')
    vertex3 = Vertex('C')
    vertex4 = Vertex('D')
    
    vertex1.add_adjacent(vertex2, 5)
    vertex1.add_adjacent(vertex3, 10)
    vertex2.add_adjacent(vertex4, 3)
    vertex3.add_adjacent(vertex4, 7)
    
    graph.add_vertex(vertex1)
    graph.add_vertex(vertex2)
    graph.add_vertex(vertex3)
    graph.add_vertex(vertex4)
    
    return graph

def test_dijkstras_shortest_path(sample_weighted_graph):
    assert dijkstras(sample_weighted_graph, 'A', 'D') == ['A', 'B', 'D']

def test_dijkstras_same_node(sample_weighted_graph):
    assert dijkstras(sample_weighted_graph, 'A', 'A') == ['A']

def test_dijkstras_unreachable_destination(sample_weighted_graph):
    assert dijkstras(sample_weighted_graph, 'A', 'Z') == []